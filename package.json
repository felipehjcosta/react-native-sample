{
  "name": "PropertyFinder",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chai": "^4.1.2",
    "native-base": "^2.3.9",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-native": "0.51.0",
    "react-navigation": "1.0.0-beta.23",
    "react-navigation-redux-helpers": "^1.0.5",
    "react-redux": "^5.0.7",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-jest": "21.2.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "detox": "^6.0.4",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "fetch-mock": "^6.0.0",
    "flow-bin": "^0.66.0",
    "ignore-styles": "^5.0.1",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "mocha": "^4.0.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "16.0.0",
    "redux-mock-store": "^1.5.1",
    "standard": "^11.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "jest": {
    "preset": "react-native",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/vendor",
      "/e2e"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/PropertyFinder.app",
        "build": "xcodebuild -project ios/PropertyFinder.xcodeproj -scheme PropertyFinder -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/PropertyFinder.app",
        "build": "xcodebuild -project ios/PropertyFinder.xcodeproj -scheme PropertyFinder -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build": "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "test"
      }
    }
  }
}
